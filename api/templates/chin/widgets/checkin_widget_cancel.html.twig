{% if cancelled is not defined %}
    <h2>{{ 'reservation'|trans|capitalize }}</h2>
    <p>{{ 'date'|trans|capitalize }}: {{ reservation.event.startDate|date("H:i d-m-Y") }}</p>
    <p>{{ 'location'|trans|capitalize }}: {{ commonground_resource(reservation.event.calendar.resource).name }}</p>
    <p>{{ 'number of people'|trans|capitalize }}: {{ reservation.numberOfParticipants }}</p>
    <p>{{ 'under name'|trans|capitalize }}: {{ commonground_resource(reservation.underName).name }}</p>
    {% if code == 'notFound' %}
        <p><strong>{{ 'are you sure you wish to delete this reservation'|trans|capitalize }}?</strong></p>
        <div>
            <input type="hidden" name="reservationId" value="{{ reservation.id }}">
            <button class="btn btn-danger" name="method" value="delete">{{ 'yes'|trans|capitalize }}</button>
            <a href="{{ path('app_dashboard_reservations') }}" class="btn btn-success">{{ 'no'|trans|capitalize }}</a>
        </div>
    {% else %}
        <p><strong>{{ 'are you sure you wish to cancel this reservation'|trans|capitalize }}?</strong></p>
        <div>
            <input type="hidden" name="reservationId" value="{{ reservation.id }}">
            <button class="btn btn-danger">{{ 'yes'|trans|capitalize }}</button>
            <a href="{{ path('app_dashboard_reservations') }}" class="btn btn-success">{{ 'no'|trans|capitalize }}</a>
        </div>
    {% endif %}
{% else %}
    <p>{{ 'your reservation has been cancelled'|trans|capitalize }}</p>
    {% if code == 'notFound' %}
        <p><strong>{{ 'are you sure you wish to delete this reservation'|trans|capitalize }}?</strong></p>
        <div>
            <input type="hidden" name="reservationId" value="{{ reservation.id }}">
            <button class="btn btn-danger" name="method" value="delete">{{ 'yes'|trans|capitalize }}</button>
            <a href="{{ path('app_dashboard_reservations') }}" class="btn btn-success">{{ 'no'|trans|capitalize }}</a>
        </div>
    {% else %}
        <div style="margin-top: 10px; margin-bottom: 10px; padding: 0 10px;">
            <a href="{{ path('app_dashboard_reservations') }}" class="btn btn-success"><h2>{{ 'back'|trans|capitalize }}</h2></a>
        </div>
    {% endif %}
{% endif %}
