        <div class="card-body p-2">
            <h2 class="h5 font-weight-normal text-center mt-3 mb-0">{{ app.user.name }}</h2>
            <div class="list-group dashboard-menu list-group-sm mt-4">
                <a href="{{ path('app_dashboard_checkins') }}" class="d-flex list-group-item list-group-item-action {% if activeItem is defined and activeItem == 'checkins' %}active {% endif %}">{{ 'checkins'|trans|capitalize }} <span class="icon icon-xs ml-auto"><span class="fas fa-chevron-right"></span></span></a>
