                <a href="{{ path('app_dashboard_reservations') }}" class="d-flex list-group-item list-group-item-action {% if activeItem is defined and activeItem == 'reservation' %}active {% endif %}">{{ 'reservations'|trans|capitalize }} <span class="icon icon-xs ml-auto"><span class="fas fa-chevron-right"></span></span></a>
